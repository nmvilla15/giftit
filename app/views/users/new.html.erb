<div class="signupContainer">
<h1 class="sign text-center">Sign Up</h1>
  <div class="d-flex justify-content-center">
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username%>
    </div>
    <div class="field">
      <%= f.label :profile_picture %><br />
      <%= f.file_field :avatar%>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions"><%= f.submit "Sign Up", class: "btn btn-info mt-1" %></div>
  <% end %>
  </div>
</div>
